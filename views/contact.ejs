<div class="contact-container">
    <h1>Contact Us</h1>
    <p>Interested in joining our academy? Fill out the form below and we'll get back to you soon.</p>

    <% if (locals.success) { %>
        <div class="success-message">
            <%= success %>
        </div>
    <% } %>

    <% if (locals.error) { %>
        <div class="error-message">
            <%= error %>
        </div>
    <% } %>

    <form action="/api/contact" method="POST" class="contact-form">
        <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" required>
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required></textarea>
        </div>

        <button type="submit" class="btn-primary">Send Message</button>
    </form>

    <div class="contact-info">
        <h2>Other Ways to Reach Us</h2>
        <div class="info-grid">
            <div class="info-item">
                <h3>Address</h3>
                <p>123 Football Street</p>
                <p>Sports City, SC 12345</p>
            </div>
            <div class="info-item">
                <h3>Phone</h3>
                <p>(123) 456-7890</p>
            </div>
            <div class="info-item">
                <h3>Email</h3>
                <p>info@allstars.com</p>
            </div>
            <div class="info-item">
                <h3>Training Hours</h3>
                <p>Monday - Friday: 4PM - 8PM</p>
                <p>Saturday: 9AM - 2PM</p>
            </div>
        </div>
    </div>
</div> 